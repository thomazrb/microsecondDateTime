<Window x:Class="MicrosecondDateTime.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Testes com DateTime" Height="378" Width="521">
    <Grid>
        <Button x:Name="BTcapture" Content="Capture" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="100" Click="BTcapture_Click"/>
        <TextBox x:Name="TBcapture" HorizontalAlignment="Left" Height="23" Margin="280,10,-4,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="222" IsReadOnly="True"/>
        <Button x:Name="BTrebuild" Content="Rebuild" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Width="100" Click="BTrebuild_Click"/>
        <TextBox x:Name="TBrebuild" HorizontalAlignment="Left" Height="23" Margin="280,41,-4,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="222"/>
        <TextBlock x:Name="TBlog" Margin="10,75,12,10" TextWrapping="Wrap"/>
        <Label Content="DateTime Captured in Ticks:" HorizontalAlignment="Left" Margin="115,10,0,0" VerticalAlignment="Top"/>
        <Label Content="DateTime Rebuilt in Ticks:" HorizontalAlignment="Left" Margin="115,39,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
